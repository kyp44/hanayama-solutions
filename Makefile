###############################################################################
# FILE: Makefile
#
# Author: Dan Whitman
##############################################################################
TARGET = solutions

.PHONY: all gfx clean

#==============================================================================
all:
#==============================================================================
	pdflatex -halt-on-error $(TARGET).tex

#==============================================================================
gfx:
#==============================================================================
	cd gfx; ./crop-screenshots.py uncropped/*

#==============================================================================
clean:
#==============================================================================
	rm -f *.aux *.log *.pdf *.out *.toc
	rm -f -r gfx/*.png
